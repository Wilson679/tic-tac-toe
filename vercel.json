{
  "version": 2,
  "build": {
    "env": {
      "ABLY_API_KEY": "@ably_api_key"
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/:path*", "destination": "/public/:path*" },
    { "source": "/(.*)", "destination": "/public/index.html" },
    { "source": "/", "destination": "/public/index.html" }
  ],
  "functions": {
    "api/*.js": {
      "runtime": "nodejs18.x"
    }
  }
}